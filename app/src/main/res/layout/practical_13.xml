<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Practical_13">

    <Button
        android:id="@+id/pgbar1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="90dp"
        android:background="#0f0"
        android:padding="10dp"
        android:text="Progress Bar 1"
        android:textColor="#fff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/pgbar2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pgbar1"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="94dp"
        android:background="#0f0"
        android:padding="10dp"
        android:text="Progress Bar 2"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/toPr14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pgbar2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="144dp"
        android:text="To PR 14" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview"
        android:layout_width="110dp"
        android:layout_height="85dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="261dp"
        android:visibility="gone"
        app:cardCornerRadius="50dp"
        >

        <ProgressBar
            android:layout_width="92dp"
            android:layout_height="65dp"
            android:layout_margin="10dp" />

    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>