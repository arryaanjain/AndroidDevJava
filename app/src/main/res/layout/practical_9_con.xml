<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Practical_9_Con">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="24sp"
        android:background="#EEEEEE"
        android:padding="8dp"
        android:textAlignment="center"
        android:textColor="#333333"
        android:text="0" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/display"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:onClick="onClearClick"
        android:text="C" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/display"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/btnClear"
        android:onClick="onOperatorClick"
        android:text="/" />

    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/display"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/btnDivide"
        android:onClick="onOperatorClick"
        android:text="*" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnClear"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:onClick="onNumberClick"
        android:text="7" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnClear"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/btn7"
        android:onClick="onNumberClick"
        android:text="8" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnClear"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/btn8"
        android:onClick="onNumberClick"
        android:text="9" />

    <Button
        android:id="@+id/btnSubtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/display"
        android:layout_toEndOf="@id/btn9"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:onClick="onOperatorClick"
        android:text="-" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn7"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:onClick="onNumberClick"
        android:text="4" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn7"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/btn4"
        android:onClick="onNumberClick"
        android:text="5" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn7"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/btn5"
        android:onClick="onNumberClick"
        android:text="6" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnClear"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/btn6"
        android:onClick="onOperatorClick"
        android:text="+" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn4"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:onClick="onNumberClick"
        android:text="1" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn4"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/btn1"
        android:onClick="onNumberClick"
        android:text="2" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn4"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/btn2"
        android:onClick="onNumberClick"
        android:text="3" />

    <Button
        android:id="@+id/btnEquals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnAdd"
        android:layout_toEndOf="@id/btn6"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:onClick="onEqualsClick"
        android:text="=" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn1"
        android:layout_margin="16dp"
        android:onClick="onNumberClick"
        android:text="0" />

    <Button
        android:id="@+id/btnCon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn0"
        android:layout_margin="16dp"
        android:onClick="onPR10Click"
        android:text="To PR 10" />


    <Button
        android:id="@+id/btnDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnEquals"
        android:layout_toEndOf="@id/btn3"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:onClick="onNumberClick"
        android:text="." />

</RelativeLayout>
